{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "default:pinDigestsDisabled",
    "mergeConfidence:all-badges",
    "docker:disable"
  ],
  "assignees": [
    "majewsky",
    "SuperSandro2000"
  ],
  "commitMessageAction": "Renovate: Update",
  "constraints": {
    "go": "1.24"
  },
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "osvVulnerabilityAlerts": true,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "packageRules": [
    {
      "description": "Move all golang updates in an own group. Enable patch updates for golang",
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "groupName": "golang",
      "separateMinorPatch": true
    },
    {
      "description": "Disable major and minor updates for golang",
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "matchUpdateTypes": ["minor", "major"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "/^github\\.com\\/sapcc\\/.*/"
      ],
      "automerge": true,
      "groupName": "github.com/sapcc"
    },
    {
      "matchPackageNames": [
        "!/^github\\.com\\/sapcc\\/.*/",
        "/.*/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "External dependencies"
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "matchFileNames": [
        ".github/workflows/oci-distribution-conformance.yml"
      ],
      "enabled": true
    }
  ],
  "prHourlyLimit": 0,
  "schedule": [
    "before 8am on Friday"
  ],
  "semanticCommits": "disabled"
}
